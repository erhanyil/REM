@model IEnumerable<REM.Models.AdvertModal>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Responsive Hover Table</h3>
                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.advertTitle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.advertDetail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.advertType)
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.advertTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.advertDetail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.advertType)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.advertID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.advertID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.advertID })
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>